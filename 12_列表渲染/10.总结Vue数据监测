<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>数据监测</title>
    <script type="text/javascript" src="../js/vue.js"></script>
</head>

<body>
    <div id="root">
        <h1>学生信息</h1>
        <table>
            <tr>
                <td><button @click="student.age++">年龄+1岁</button></td>
                <td><button @click="addSex">添加性别属性，默认值：男</button></td>
                <td><button @click="student.sex='未知'">添加修改性别属性</button></td>
                <td><button @click="addFriend">在列表首位添加一个朋友</button></td>
                <td><button @click="updateFriendFristName">修改第一个朋友的名字为：张三</button></td>
                <td><button @click="addHobby">添加一个爱好</button></td>
                <td><button @click="updateHobby">修改第一个爱好为：开车</button></td>
            </tr>
        </table>

        <h4>姓名：{{student.name}}</h4>
        <h4>年龄：{{student.age}}</h4>
        <h4 v-if="student.sex">性别：{{student.sex}}</h4>
        <h4>爱好：</h4>
        <ul>
            <li v-for="(h,index) in student.hobbies" :key="index">{{h}}</li>
        </ul>
        <h4>朋友们：</h4>
        <ul>
            <li v-for="(f,index) in student.friends" :key="index">{{f.name}}--{{f.age}}</li>
        </ul>
    </div>
</body>
<script type="text/javascript">
    const vm = new Vue({
        el: '#root',
        data: {
            student: {
                name: 'Tom',
                age: 20,
                /* {
                    rage: 35,
                    sage: 25
                } */
                hobbies: ['抽烟', '喝酒', '烫头'],
                friends: [
                    { name: 'herry', age: 21 },
                    { name: 'apple', age: 23 }
                ]
            }

        },
        methods: {
            addSex() {
                // Vue.set(this.student, 'sex', '男')
                this.$set(this.student, 'sex', '男')
            },
            addFriend() {
                this.student.friends.unshift({
                    name: 'jack', age: 19
                })
            },
            updateFriendFristName() {
                this.student.friends[0].name = '张三'
            },
            addHobby() {
                this.student.hobbies.push('学习')
            },
            updateHobby() {
                // this.student.hobbies.splice(0, 1, '开车')
                Vue.set(this.student.hobbies, 0, '开车')
                // this.$set(this.student.hobbies, 0, '开车')
            }

        }
    })

</script>

</html>
